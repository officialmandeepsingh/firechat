<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.RegisterNewUser"
    android:paddingHorizontal="32dp">

    <!-- TODO: Update blank fragment layout -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:hint=" Name "
        app:met_floatingLabel="highlight"
        android:inputType="textPersonName"
        android:layout_marginTop="128dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_reg_emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:hint="Email ID"
        app:met_floatingLabel="highlight"
        android:inputType="textEmailAddress"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ed_reg_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:hint=" Password "
        android:inputType="textPassword"
        android:layout_marginTop="24dp"
        app:met_floatingLabel="highlight"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ed_reg_emailid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_reg_phnnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:hint=" Contact Number "
        android:inputType="phone"
        android:layout_marginTop="24dp"
        app:met_floatingLabel="highlight"
        android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ed_reg_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/btn_reg_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ed_reg_phnnum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:text=" Register "
        android:background="@drawable/backgroundgradient"
        android:paddingHorizontal="72dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>