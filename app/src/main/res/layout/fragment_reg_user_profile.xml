<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.RegUserProfile"
    android:padding="24dp">

    <!-- TODO: Update blank fragment layout -->
   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/img_regu_profilepic"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:layout_marginTop="32dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />

    <TextView
        android:id="@+id/txt_regu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/img_regu_profilepic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="xxxxxx xxxxxxx"
        />

    <TextView
        android:id="@+id/txt_regu_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_regu_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="xxxxxx xxxxxxx"
        />

    <Button
    android:id="@+id/btn_regu_sentreq"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sent Friend Request"
    android:padding="16dp"
    app:layout_constraintTop_toBottomOf="@id/txt_regu_status"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/backgroundgradient"
    android:layout_marginTop="32dp"

    />

    <Button
        android:id="@+id/btn_regu_dltreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Friend Request"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_regu_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/backgroundgradient"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>