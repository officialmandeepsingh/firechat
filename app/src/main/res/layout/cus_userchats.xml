<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cuschat_userpic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/cuschat_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cuschat_userpic"
        app:layout_constraintEnd_toStartOf="@id/cuschat_usertime"
        android:text="xxxxxxx xxxxxxxxx"
        android:layout_marginHorizontal="16dp"
        android:clickable="false"
        android:textIsSelectable="false"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/cuschat_usermsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cuschat_username"
        app:layout_constraintStart_toEndOf="@id/cuschat_userpic"
        app:layout_constraintEnd_toStartOf="@id/cuschat_usertime"
        android:text="xxxxxxx xxxxxxxxx \n xxxxxxxxx \n xxxxxxx"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:maxLines="3"
        />

    <TextView
        android:id="@+id/cuschat_usertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=" xx:xx x "
        android:layout_marginHorizontal="16dp"
        />

    <TextView
        android:id="@+id/cuschat_useronline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cuschat_usertime"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="O"
        android:textColor="#00C853"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>