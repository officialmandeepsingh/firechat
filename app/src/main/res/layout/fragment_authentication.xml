<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Authentication"
    android:paddingHorizontal="32dp">

    <!-- TODO: Update blank fragment layout -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_auth_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_singleLineEllipsis="true"
        android:ellipsize="start"
        android:hint="Email ID"
        app:met_floatingLabel="highlight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textEmailAddress"
        android:layout_marginTop="128dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="16dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_auth_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_singleLineEllipsis="true"
        android:ellipsize="start"
        android:hint="Password"
        app:met_floatingLabel="highlight"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ed_auth_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="16dp"
        />

    <TextView
        android:id="@+id/txt_auth_passrecovey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password !"
        android:textSize="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ed_auth_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#64DD17"
        />

    <Button
        android:id="@+id/btn_auth_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_auth_passrecovey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:text=" LOGIN "
        android:background="@drawable/backgroundgradient"
        android:paddingHorizontal="72dp"
        />

    <Button
        android:id="@+id/btn_auth_regsiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_auth_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:text=" Register New User "
        android:background="@drawable/backgroundgradient"
        android:paddingHorizontal="25dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>