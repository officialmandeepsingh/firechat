<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_cusfrnd_dp"
        android:layout_width="70dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/txt_cusfrnd_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="xxxxxx xxxxxxx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_cusfrnd_dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_cusfrnd_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="xxxxxx xxxxxxx"
        app:layout_constraintTop_toBottomOf="@id/txt_cusfrnd_name"
        app:layout_constraintStart_toEndOf="@id/img_cusfrnd_dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/img_cusfrnd_mess"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_cusfrnd_status"
        app:layout_constraintStart_toEndOf="@id/img_cusfrnd_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_message_black_24dp"
        android:paddingVertical="4dp"
        />

    <ImageView
        android:id="@+id/img_cusfrnd_call"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_cusfrnd_status"
        app:layout_constraintStart_toEndOf="@id/img_cusfrnd_mess"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_call_black_24dp"
        android:paddingVertical="4dp"
        />

    <ImageView
        android:id="@+id/img_cusfrnd_profile"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_cusfrnd_status"
        app:layout_constraintStart_toEndOf="@id/img_cusfrnd_call"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_person_black_24dp"
        android:paddingVertical="4dp"
        />

    <ImageView
        android:id="@+id/img_cusfrnd_notice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_cusfrnd_status"
        app:layout_constraintStart_toEndOf="@id/img_cusfrnd_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_notifications_black_24dp"
        android:paddingVertical="4dp"
        />

    <ImageView
        android:id="@+id/img_cusfrnd_onlinerem"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_cusfrnd_status"
        app:layout_constraintStart_toEndOf="@id/img_cusfrnd_notice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_remove_red_eye_black_24dp"
        android:paddingVertical="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>